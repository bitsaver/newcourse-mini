<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">试卷名称</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" auto-focus bindinput="bindKeyInput" value="{{name}}" placeholder="请输入试卷名称"/>
      </view>
    </view>
  </view>

<view class="page-section">
    <picker mode="date" value="{{date}}" start="2020-01-01" end="2021-09-01" bindchange="bindDateChange">
        <view class="picker">
        开始时间: {{startDate}}
        </view>
    </picker>
</view>

 <view class="page-section">
    <picker mode="date" value="{{date}}" start="2020-01-01" end="2021-09-01" bindchange="bindDateChange2">
        <view class="picker">
        结束时间: {{endDate}}
        </view>
    </picker>
</view> 
  <view class="addBtnView" id="buttonContainer">
    <button  class="addBtn" type="primary" bindtap="submint">确认添加</button>
  </view>

