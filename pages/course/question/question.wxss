/* pages/mine/question/question.wxss */
.page_bd{
  margin: 15rpx;
}
.page__title{
text-align: center;
}
.card {
    background: #fff;
    box-shadow: 0 0.05rem 0.1rem rgba(0,0,0,.3);
    margin: .7rem;
    position: relative;
    border-radius: .1rem;
    font-size: .85rem;
}
.card-header {
    border-radius: .1rem .1rem 0 0;
font-size: 1rem;

}
.card-header:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    right: auto;
    top: auto;
    height: 1px;
    width: 100%;
    background-color: #e1e1e1;
    display: block;
    z-index: 15;
    -webkit-transform-origin: 50% 100%;
    transform-origin: 50% 100%;
}
.card-footer, .card-header {
    min-height: 2.2rem;
    position: relative;
    padding: .5rem .75rem;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.card-content {
    position: relative;
}
.card-content-inner {
    padding: .75rem;
    position: relative;
}
.card-footer {
    border-radius: 0 0 .1rem .1rem;
    color: #5f646e;
}
.card-footer:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: auto;
    right: auto;
    height: 1px;
    width: 100%;
    background-color: #e1e1e1;
    display: block;
    z-index: 15;
    -webkit-transform-origin: 50% 0;
    transform-origin: 50% 0;
}